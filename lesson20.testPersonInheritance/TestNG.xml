<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="testPersonInheritance">
    <groups>
        <run>
            <include name="Man1, Man2"/>
        </run>
    </groups>
    <test name="Man1">
        <parameter name="name" value="Ivan"/>
        <parameter name="lastname" value="Pidubniy"/>
        <parameter name="age" value="61"/>
        <parameter name="isPartnerMale" value="true"/>
        <parameter name="isSmoking" value="false"/>
        <parameter name="salary" value="2000000"/>
        <classes>
            <class name="TestClassMan"/>
        </classes>
    </test> <!-- Test -->
    <test name="Man2">
        <parameter name="name" value="Petro"/>
        <parameter name="lastname" value="Semenov"/>
        <parameter name="age" value="67"/>
        <parameter name="isPartnerMale" value="false"/>
        <parameter name="isSmoking" value="true"/>
        <parameter name="salary" value="25000"/>
        <classes>
            <class name="TestClassMan"/>
        </classes>
    </test> <!-- Test -->

</suite>